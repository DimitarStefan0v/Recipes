@model PagingViewModel

<section class="pagination-container">
    <article class="pagination-links">
        @if (Model.HasPreviousPage)
        {
            <a asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-search="@Model.Search" asp-route-sortOrder="@Model.SortOrder" asp-route-categoryId="@Model.CategoryId" asp-route-id="@Model.SourceId" asp-route-page="1">|<i class="fa-solid fa-left-long"></i></a>
        }
        @for (int i = this.Model.PageNumber - 3; i < this.Model.PageNumber - 1; i++)
        {
            if (i > 0)
            {
                <a class="page-desktop-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-search="@Model.Search" asp-route-sortOrder="@Model.SortOrder" asp-route-categoryId="@Model.CategoryId" asp-route-id="@Model.SourceId" asp-route-page="@i">@i</a>
            }
        }
        @if (Model.HasPreviousPage)
        {
            <a class="page-desktop-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-search="@Model.Search" asp-route-sortOrder="@Model.SortOrder" asp-route-categoryId="@Model.CategoryId" asp-route-id="@Model.SourceId" asp-route-page="@Model.PreviousPageNumber">@Model.PreviousPageNumber</a>
            <a class="page-mobile-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-search="@Model.Search" asp-route-sortOrder="@Model.SortOrder" asp-route-categoryId="@Model.CategoryId" asp-route-id="@Model.SourceId" asp-route-page="@Model.PreviousPageNumber">&lt; Назад</a>
        }
        <a id="inactive-current-page-link" href="#">@this.Model.PageNumber</a>
        @if (Model.HasNextPage)
        {
            <a class="page-desktop-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-search="@Model.Search" asp-route-sortOrder="@Model.SortOrder" asp-route-categoryId="@Model.CategoryId" asp-route-id="@Model.SourceId" asp-route-page="@Model.NextPageNumber">@Model.NextPageNumber</a>
            <a class="page-mobile-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-search="@Model.Search" asp-route-sortOrder="@Model.SortOrder" asp-route-categoryId="@Model.CategoryId" asp-route-id="@Model.SourceId" asp-route-page="@Model.NextPageNumber">Напред &gt;</a>
        }
        @for (int i = this.Model.PageNumber + 2; i < this.Model.PageNumber + 4; i++)
        {
            if (i <= this.Model.PagesCount)
            {
                <a class="page-desktop-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-search="@Model.Search" asp-route-sortOrder="@Model.SortOrder" asp-route-categoryId="@Model.CategoryId" asp-route-id="@Model.SourceId" asp-route-page="@i">@i</a>
            }
        }
        @if (Model.HasNextPage)
        {
            <a asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-search="@Model.Search" asp-route-sortOrder="@Model.SortOrder" asp-route-categoryId="@Model.CategoryId" asp-route-id="@Model.SourceId" asp-route-page="@Model.PagesCount"><i class="fa-solid fa-right-long"></i>|</a>
        }
    </article>
</section>