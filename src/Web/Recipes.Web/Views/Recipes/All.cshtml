@using Recipes.Web.ViewModels.Recipes;
@model RecipesListViewModel

@{
    this.ViewData["Title"] = "Всички рецепти";
}

<h1>Рецепти</h1>
<section class="recipes-container">
    @foreach (var recipe in Model.Recipes)
    {
        <article class="single-recipe-container">
            <article class="single-recipe-container-img">
                <img src="@recipe.ImageUrl" class="img-fluid w-100">
            </article>
            <article class="single-recipe-container-name">
                <p>@(recipe.Name.Length > 50 ? recipe.Name.Substring(0, 50) + "..." : recipe.Name)</p>
            </article>
        </article>
    }
</section>